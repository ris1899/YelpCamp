
<%-include("../partials/header") %>

<div class="row">
	<div class=" col-md-12 text-center">
	<h1>Edit <%=campground.name%> </h1>	
	</div>
	 <div style="width: 30%; margin: 25px auto;">
	 <form action="/campgrounds/<%=campground._id%>/update" method="POST">
           
		  <div class="form-group ">
           <input type="text" class="form-control"  name="campground[name]" value="<%=campground.name%>" >
         </div>
		 <div class="form-group ">
           <input type="number" class="form-control"  name="campground[price]" value="<%=campground.price%>"min="1" step="1">
         </div>
              <div class="form-group">
                <input type="text" class="form-control"name="campground[image]" value="<%=campground.image%>">
             </div>
             <div class="form-group">
               <textarea class="form-control" name="campground[description]"><%=campground.description%></textarea>
                 </div>
		    <div class="form-group">
             <button type="submit" class="btn btn-lg btn-block btn-primary">EDIT</button>
		   </div>	
	</form>
		 <a href="/campgrounds">Go Back</a>	 
  </div>
 
	
</div>
 <%-include("../partials/footer") %>