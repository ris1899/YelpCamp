
<%-include("../partials/header") %>


<div class="row">
	<div class=" col-md-12 text-center">
	<h1>Add new Campground</h1>	
	</div>
	 <div style="width: 30%; margin: 25px auto;">
	 <form action="/campgrounds" method="POST">
           
		  <div class="form-group ">
           <input type="text" class="form-control"  name="name" placeholder="name of campsite">
         </div>
		 <div class="form-group ">
           <input type="number" class="form-control"  name="price" placeholder="price" min="1" step="1">
         </div>
               <div class="form-group">
                <input type="text" class="form-control" name="image" id="image" placeholder="image url">
             </div>
             <div class="form-group">
               <textarea class="form-control" name="description" placeholder="desc"></textarea>
                 </div>
		    <div class="form-group">
             <button type="submit" class="btn btn-lg btn-block btn-primary">ADD</button>
		   </div>	
	</form>
		 <a href="/campgrounds">Go Back</a>	 
  </div>
 
	
</div>
 <%-include("../partials/footer") %>